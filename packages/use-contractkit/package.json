    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tailwindcss": "^3.0.15",
    "web3": "^1.3.6"
  },
  "peerDependencies": {
    "@celo/contractkit": ">=1.5.0 <=3.0.0",
