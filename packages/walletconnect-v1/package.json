  },
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/celo-org/react-celo#readme",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celo-org/react-celo.git"
