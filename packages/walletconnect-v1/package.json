{
  "name": "@celo/wallet-walletconnect-v1",
  "version": "4.3.0",
  "description": "WalletConnect wallet legacy (v1) implementation",
  "author": "Celo",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "keywords": [
    "celo",
    "blockchain",
    "sdk",
    "WalletConnect",
    "wallet"
  ],
  "scripts": {
    "dev": "yarn run build && tsc-watch",
    "build": "tsc -b .",
